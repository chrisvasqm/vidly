@model List<Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

@if (Model.Count == 0)
{
    <p>There are no customers yet.</p>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in @Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id })</td>
            </tr>
        }
        </tbody>
    </table>
}