@using Remotion.Linq.Utilities
@model Vidly.ViewModel.MovieFormViewModel

@{
    ViewBag.Title = "New";
    Layout = "_Layout";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please verify the following errors.")
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.ReleaseDate)
            @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MM yyyy}", new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.ReleaseDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.GenreId)
            @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select a Genre", new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.GenreId)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.NumberInStock)
            @Html.TextBoxFor(m => m.NumberInStock, new {@class = "form-control", @type = "number"})
            @Html.ValidationMessageFor(m => m.NumberInStock)
        </div>
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}