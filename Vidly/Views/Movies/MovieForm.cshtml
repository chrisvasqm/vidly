@using Remotion.Linq.Utilities
@model Vidly.ViewModel.MovieFormViewModel

@{
    ViewBag.Title = "New";
    Layout = "_Layout";
}

@if (Model.Movie == null)
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}

@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please verify the following errors.")
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.Movie.Name)
            @Html.TextBoxFor(m => m.Movie.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Movie.Name)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.Movie.ReleaseDate)
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MM yyyy}", new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.Movie.GenreId)
            @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select a Genre", new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Movie.GenreId)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-3">
            @Html.LabelFor(m => m.Movie.NumberInStock)
            @Html.TextBoxFor(m => m.Movie.NumberInStock, new {@class = "form-control", @type = "number"})
            @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
        </div>
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}